{
  "functions": {
    "build.sh": {
      "runtime": "vercel-bash@4.0.0"
    }
  },
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "commands": ["chmod +x build.sh && ./build.sh"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}